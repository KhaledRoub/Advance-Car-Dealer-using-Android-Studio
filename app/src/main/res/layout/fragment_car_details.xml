<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CarDetailsFragment">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="77dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/rounded_layout_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manufacture"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text=" Manufacturer"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/manufacturerView"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="77dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/rounded_layout_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text=" Model"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/modelView"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:gravity="left|center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="77dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/rounded_layout_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/year"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text=" Year"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yearView"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="77dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/rounded_layout_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/miles"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text=" Distance"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/milesView"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="77dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/rounded_layout_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text=" Price"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceView"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="77dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/rounded_layout_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/offers"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text=" Offers"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offersView"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:gravity="left|center" />
    </LinearLayout>



</LinearLayout>