<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:layout_goneMarginBottom="100dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="158dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="27dp"
            android:layout_height="51dp"
            android:layout_alignTop="@+id/carName"
            android:layout_alignBottom="@+id/reserveBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="153dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="206dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/mileage" />

        <TextView
            android:id="@+id/carName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:foregroundGravity="top"
            android:gravity="left|center"
            android:text="BMW 840i Coupe"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carPrice"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/carName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="37dp"
            android:gravity="left|center"
            android:text="$500"
            android:textColor="#221F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/priceWithOffer"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/carName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="245dp"
            android:layout_marginTop="37dp"
            android:gravity="left|center"
            android:text="$500"
            android:textColor="#221F1F"
            android:textSize="16sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/carMiles"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="84dp"
            android:text="545 miles"
            android:textColor="#221F1F"
            android:textSize="12sp" />

        <Button
            android:id="@+id/reserveBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/carPrice"
            android:layout_alignEnd="@+id/carPrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="264dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="29dp"
            android:elevation="50dp"
            android:text="Reserve"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:cornerRadius="10sp" />

        <ImageView
            android:id="@+id/favClick"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/reserveBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="336dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-1dp"
            android:clickable="true"
            android:src="@drawable/favorite_border"
            android:tag="favorite_border"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/carName"
            android:layout_alignBottom="@+id/reserveBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="156dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="210dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/calendar" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/carName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="157dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="209dp"
            android:layout_marginBottom="9dp"
            app:srcCompat="@drawable/money" />

        <TextView
            android:id="@+id/carModel"
            android:layout_width="58dp"
            android:layout_height="17dp"
            android:layout_below="@+id/carMiles"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="148dp"
            android:layout_marginBottom="10dp"
            android:text="2019"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="230dp"
            app:srcCompat="@drawable/a1" />

        <TextView
            android:id="@+id/dayPrice"
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="73dp"
            android:text="/Day"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/carName"
            android:layout_alignBottom="@+id/reserveBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="262dp"
            android:layout_marginBottom="98dp"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/dayWithOffer"
            android:layout_width="32dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="273dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="71dp"
            android:layout_toEndOf="@+id/priceWithOffer"
            android:text="/Day"
            android:textSize="10sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="157dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="211dp"
            android:layout_marginBottom="9dp"
            app:srcCompat="@drawable/rate" />

        <TextView
            android:id="@+id/carRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="192dp"
            android:layout_marginBottom="10dp"
            android:text="0.0"
            android:textSize="10sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
